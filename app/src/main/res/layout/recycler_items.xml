<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#FFFFFFFF">

        <ImageView
            android:id="@+id/train_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:src="@drawable/side_traindefault"/>

        <TextView
            android:id="@+id/vertical_description"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_alignBottom="@+id/train_icon"
            android:layout_alignLeft="@+id/train_icon"
            android:layout_alignRight="@+id/train_icon"
            android:layout_alignTop="@+id/train_icon"
            android:gravity="center"
            android:text="0"
            android:textSize="30dp"/>

    </RelativeLayout>


</LinearLayout>