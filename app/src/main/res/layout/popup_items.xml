<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/itemss1"
            android:layout_width="0px"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"></TextView> // 리스트 중 출발역 텍스트

        <TextView
            android:id="@+id/itemss2"
            android:layout_width="0px"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"></TextView> // 리스트 중 도착역 텍스트

        <ImageView
            android:id="@+id/itemss3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>

        <TextView
            android:id="@+id/itemss4"
            android:layout_width="0px"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"></TextView> // 리스트 중 상행하행 텍스트

    </LinearLayout>

</LinearLayout>